{
    // Disable telemetry
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    // **Intellisense**
    // Send snippets to top
    "editor.snippetSuggestions": "top",
    // Enable tab complete for snippets
    "editor.tabCompletion": "onlySnippets",
    // Show parameter documentation as you type
    "editor.parameterHints": true,
    // Suggest snippets as you type trigger characters
    "editor.suggestOnTriggerCharacters": true,
    // Enable quick suggestions
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },

    // **editor misc**
    // Set ruler at 80 and 100 characters
    "editor.rulers": [80,100],
    // Font size
    "editor.fontSize": 15,
    // Open a new file when an empty instance is started
    "workbench.startupEditor": "newUntitledFile",
    // Use Unix style EOL
    "files.eol": "\n",

    // **Go**
    // Lint all workspace, this is good for source code review
    // Other options are "off" or "package"
    "go.lintOnSave": "workspace",
    // Complete functions with parameters
    "go.useCodeSnippetsOnFunctionSuggest": true,
    // golang-ci
    "go.lintTool":"golangci-lint",
    "go.lintFlags": [
        "--fast",
        "--enable=gosec",
        "--enable=gofmt",
        "--enable=misspell",
        "--enable=unparam"
    ],

    // **Markdown**
    "[markdown]": {
        // Enable word based suggestions
        "editor.wordBasedSuggestions": true,
        // Disable drag and drop in markdown files
        "editor.dragAndDrop": false,
        // Enable quick suggestions
        "editor.quickSuggestions": true,
        // Send snippets to top in suggestion list
        "editor.snippetSuggestions": "top",
    },
    // "Markdown Lint" settings
    "markdownlint.config": {
        // Disable some rules - hover with mouse for description (only works in settings file)
        "MD022": false,
        "MD032": false,
        "MD007": false,
        "MD010": false,
    },
    // "Markdown All in One" options
    // Generate Github compatible table of content
    "markdown.extension.toc.githubCompatibility": true,
    // Update the table of content on save
    "markdown.extension.toc.updateOnSave": true,
    
    // **Git**
    // **uncomment to disable git**
    // "git.enabled": false,
    // "git.path": null,
    // "git.autofetch": false,

    // **Disable some gitlens stuff**
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.historyExplorer.enabled": false,
    
    // **misc**
    // Disable npm script detection
    "npm.autoDetect": "off",
}